{
  "name": "0 ParameterTest",
  "display_name": "Тест Параметров",
  "group": "Test",
  "script_path": "test.py",
  "python_version": "3.5",
  "working_directory": "./samples",
  "description": "This script does nothing except accepting a lot of parameters and printing them",
  "allowed_users": [
    "*"
  ],
  "include": "${Simple Text}.json",
  "parameters": [
    {
      "name": "Simple Int",
      "default": "test",
      "param": "--simple_int",
      "type": "number"
    },
    {
      "name": "Simple List",
      "param": "--simple_list",
      "type": "list",
      "description": "Parameter Five",
      "values": [
        "val1",
        "val3",
        "some long value"
      ]
    },
    {
      "name": "File upload",
      "param": "--file_upload",
      "type": "file_upload",
      "description": "File upload testing"
    },
    {
      "name": "Multiple selection",
      "param": "--multiselect",
      "type": "multiselect",
      "description": "Multiselect list",
      "values": [
        "Black cat",
        "Brown dog",
        "Green parrot",
        "Red fox"
      ]
    },
    {
      "name": "Required Text",
      "required": true,
      "type": "text",
      "param": "--required_text",
      "description": "Parameter One"
    },
    {
      "name": "Required List",
      "required": true,
      "param": "--required_list",
      "type": "list",
      "description": "List with required value",
      "values": [
        "v1",
        "v2"
      ]
    },
    {
      "name": "Constrained Int",
      "required": "true",
      "param": "--constrained_int",
      "type": "number",
      "description": "Parameter Three",
      "min": "-1",
      "max": "123"
    },
    {
      "name": "Default Text",
      "type": "text",
      "required": true,
      "param": "--def_text",
      "description": "Text with default value and required"
    },
    {
      "name": "Default Boolean",
      "param": "--def_bool",
      "type": "boolean",
      "description": "Boolean Two"
    },
    {
      "name": "Constant Text",
      "param": "--const_text",
      "type": "hidden",
      "constant": true,
      "description": "Constant value"
    },
    {
      "name": "Command-based list",
      "param": "--var_file",
      "type": "list",
      "description": "List parameter 2",
      "values": [
        "test"
      ]
    },
    {
      "name": "Secure List",
      "param": "--secure_list",
      "type": "list",
      "description": "Parameter Ten",
      "secure": true,
      "values": [
        "qwerty",
        "12345678",
        "password"
      ]
    },
    {
      "name": "Very long list",
      "param": "--very_long_list",
      "type": "list",
      "description": "List with very long values",
      "values": [
        "some quite long line",
        "short",
        "a bit longer",
        "abcdefghijklmopqrstuvwxyz",
        "/home/whoever/wherever/temp/stuff/internal/my_important_file-180214.txt",
        "abcde-fghijk:lmopqr.stuvwx_yzabcd efghij.klmopq-rstuv%wxyz"
      ]
    },
    {
      "name": "IP v4",
      "param": "--ip4",
      "type": "ip4"
    },
    {
      "name": "IP v6",
      "param": "--ip6",
      "type": "ip6"
    },
    {
      "name": "Server file",
      "param": "--server_file",
      "type": "server_file",
      "secure": true,
      "file_dir": "/var/log",
      "file_extensions": [
        "log"
      ]
    },
    {
      "name": "Recursive file",
      "param": "--recurs_file",
      "type": "server_file",
      "secure": true,
      "file_dir": "..",
      "file_recursive": true,
      "file_extensions": [
        "json",
        ".log",
        "TXT"
      ]
    }
  ]
}
